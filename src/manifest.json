{
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "default_locale": "ja",
  "version": "1.0.7",
  "manifest_version": 2,
  "homepage_url": "https://arus.me",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "icons/icon.svg"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "options_page": "options/options.html",
  "permissions": [
    "clipboardWrite",
    "storage",
    "webNavigation",
    "https://www.youtube.com/*",
    "https://www.openrec.tv/*",
    "https://www.twitch.tv/*",
    "https://www.mildom.com/*",
    "https://spwn.jp/*",
    "https://*.spwn.jp/*",
    "https://live.nicovideo.jp/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "js/youtube.js",
        "js/util.js",
        "js/shared.js"
      ]
    },
    {
      "matches": [
        "https://www.openrec.tv/*"
      ],
      "js": [
        "lib/jquery-3.5.1.slim.min.js",
        "js/openrec.js",
        "js/util.js",
        "js/shared.js"
      ]
    },
    {
      "matches": [
        "https://www.showroom-live.com/*"
      ],
      "js": [
        "js/showroom.js",
        "js/util.js",
        "js/shared.js"
      ]
    },
    {
      "matches": [
        "https://www.mildom.com/*"
      ],
      "js": [
        "js/mildom.js",
        "js/util.js",
        "js/shared.js"
      ]
    },
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "lib/jquery-3.5.1.slim.min.js",
        "js/twitch.js",
        "js/util.js",
        "js/shared.js"
      ]
    },
    {
      "matches": [
        "https://spwn.jp/*",
        "https://*.spwn.jp/*"
      ],
      "js": [
        "js/spwn.js",
        "js/util.js",
        "js/shared.js"
      ]
    },
    {
      "matches": [
        "https://live.nicovideo.jp/*"
      ],
      "js": [
        "js/nicolive.js",
        "js/shared.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
